  <script>
    // Função para avançar para o questionário
    function mostrarPagina2() {
      document.getElementById('pagina1').style.display = 'none';
      document.getElementById('pagina2').style.display = 'block';
    }

    // Função para verificar respostas
    function checkAnswers() {
      let total = 0;
      const respostas = {
        q1: 'd', q2: 'c', q3: 'c', q4: 'b', q5: 'c',
        q6: 'c', q7: 'a', q8: 'c', q9: 'c', q10: 'b'
      };

      for (let i = 1; i <= 10; i++) {
        const q = document.querySelector('input[name="q'+i+'"]:checked');
        if (q && q.value === respostas['q'+i]) total++;
      }

      document.getElementById('resultado').innerText = "Você acertou " + total + " de 10 perguntas.";

      if (total >= 6) {
        document.getElementById('mensagemCertificado').innerText = 
        "PARABÉNS! Envie mensagem para o nosso WhatsApp para receber seu certificado.";
      } else {
        document.getElementById('mensagemCertificado').innerText = "";
      }
    }
  </script>

